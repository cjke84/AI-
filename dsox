        'medium_confidence_multiplier': 1.0,
        'low_confidence_multiplier': 0.5,
        'max_position_ratio': 10,  # å•æ¬¡æœ€å¤§ä»“ä½æ¯”ä¾‹
        'trend_strength_multiplier': 1.2,
        # æ–°å¢å¸‚åœºå› å­å‚æ•°
        'volatility_multiplier': {  # æ³¢åŠ¨ç‡è°ƒæ•´å› å­
            'low': 1.1,    # ä½æ³¢åŠ¨ç‡æ—¶å¢åŠ ä»“ä½
            'medium': 1.0, # ä¸­ç­‰æ³¢åŠ¨ç‡æ—¶æ­£å¸¸ä»“ä½
            'high': 0.8    # é«˜æ³¢åŠ¨ç‡æ—¶å‡å°‘ä»“ä½
        },
        'volume_multiplier': {  # æˆäº¤é‡è°ƒæ•´å› å­
            'low': 0.8,    # ä½æˆäº¤é‡æ—¶å‡å°‘ä»“ä½
            'medium': 1.0, # ä¸­ç­‰æˆäº¤é‡æ—¶æ­£å¸¸ä»“ä½
            'high': 1.2    # é«˜æˆäº¤é‡æ—¶å¢åŠ ä»“ä½
        },
        # ä»“ä½è¡°å‡å› å­ï¼ˆè¿ç»­åŒå‘äº¤æ˜“æ—¶å‡å°‘ä»“ä½ï¼‰
        'position_decay_factor': 0.9,
