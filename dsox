def setup_exchange():
    """è®¾ç½®äº¤æ˜“æ‰€å‚æ•° - å¼ºåˆ¶å…¨ä»“æ¨¡å¼"""
    try:

        # é¦–å…ˆè·å–åˆçº¦è§„æ ¼ä¿¡æ¯
        logger.info("ğŸ” è·å–BTCåˆçº¦è§„æ ¼...")
        markets = exchange.load_markets()
        btc_market = markets[TRADE_CONFIG['symbol']]

        # è·å–åˆçº¦ä¹˜æ•°
        contract_size = float(btc_market['contractSize'])
        logger.info(f"âœ… åˆçº¦è§„æ ¼: 1å¼  = {contract_size} BTC")

        # å­˜å‚¨åˆçº¦è§„æ ¼åˆ°å…¨å±€é…ç½®
        TRADE_CONFIG['contract_size'] = contract_size
        TRADE_CONFIG['min_amount'] = btc_market['limits']['amount']['min']

        logger.info(f"ğŸ“ æœ€å°äº¤æ˜“é‡: {TRADE_CONFIG['min_amount']} å¼ ")

        # å…ˆæ£€æŸ¥ç°æœ‰æŒä»“
        logger.info("ğŸ” æ£€æŸ¥ç°æœ‰æŒä»“æ¨¡å¼...")
        positions = exchange.fetch_positions([TRADE_CONFIG['symbol']])

        has_isolated_position = False
        isolated_position_info = None

        for pos in positions:
            if pos['symbol'] == TRADE_CONFIG['symbol']:
                contracts = float(pos.get('contracts', 0))
                mode = pos.get('mgnMode')

                if contracts > 0 and mode == 'isolated':
                    has_isolated_position = True
                    isolated_position_info = {
                        'side': pos.get('side'),
                        'size': contracts,
                        'entry_price': pos.get('entryPrice'),
                        'mode': mode
                    }
                    break

        # 2. å¦‚æœæœ‰é€ä»“æŒä»“ï¼Œæç¤ºå¹¶é€€å‡º
        if has_isolated_position:
            logger.error("âŒ æ£€æµ‹åˆ°é€ä»“æŒä»“ï¼Œç¨‹åºæ— æ³•ç»§ç»­è¿è¡Œï¼")
            logger.error(f"ğŸ“Š é€ä»“æŒä»“è¯¦æƒ…:")
            logger.error(f"   - æ–¹å‘: {isolated_position_info['side']}")
            logger.error(f"   - æ•°é‡: {isolated_position_info['size']}")
            logger.error(f"   - å…¥åœºä»·: {isolated_position_info['entry_price']}")
            logger.error(f"   - æ¨¡å¼: {isolated_position_info['mode']}")
            logger.error("\nğŸš¨ è§£å†³æ–¹æ¡ˆ:")
            logger.error("1. æ‰‹åŠ¨å¹³æ‰æ‰€æœ‰é€ä»“æŒä»“")
            logger.error("2. æˆ–è€…å°†é€ä»“æŒä»“è½¬ä¸ºå…¨ä»“æ¨¡å¼")
            logger.error("3. ç„¶åé‡æ–°å¯åŠ¨ç¨‹åº")
            return False

        # 3. è®¾ç½®å•å‘æŒä»“æ¨¡å¼
        logger.info("ğŸ”„ è®¾ç½®å•å‘æŒä»“æ¨¡å¼...")
        try:
            exchange.set_position_mode(False, TRADE_CONFIG['symbol'])  # Falseè¡¨ç¤ºå•å‘æŒä»“
            logger.info("âœ… å·²è®¾ç½®å•å‘æŒä»“æ¨¡å¼")
        except Exception as e:
            logger.warning(f"âš ï¸ è®¾ç½®å•å‘æŒä»“æ¨¡å¼å¤±è´¥ (å¯èƒ½å·²è®¾ç½®): {e}")

        # 4. è®¾ç½®å…¨ä»“æ¨¡å¼å’Œæ æ†
        logger.info("âš™ï¸ è®¾ç½®å…¨ä»“æ¨¡å¼å’Œæ æ†...")
        exchange.set_leverage(
            TRADE_CONFIG['leverage'],
            TRADE_CONFIG['symbol'],
            {'mgnMode': 'cross'}  # å¼ºåˆ¶å…¨ä»“æ¨¡å¼
        )
        logger.info(f"âœ… å·²è®¾ç½®å…¨ä»“æ¨¡å¼ï¼Œæ æ†å€æ•°: {TRADE_CONFIG['leverage']}x")

        # 5. éªŒè¯è®¾ç½®
        logger.info("ğŸ” éªŒè¯è´¦æˆ·è®¾ç½®...")
        balance = exchange.fetch_balance()
        usdt_balance = balance['USDT']['free']
        logger.info(f"ğŸ’° å½“å‰USDTä½™é¢: {usdt_balance:.2f}")

        # è·å–å½“å‰æŒä»“çŠ¶æ€
        current_pos = get_current_position()
        if current_pos:
            logger.info(f"ğŸ“¦ å½“å‰æŒä»“: {current_pos['side']}ä»“ {current_pos['size']}å¼ ")
        else:
            logger.info("ğŸ“¦ å½“å‰æ— æŒä»“")

        logger.info("ğŸ¯ ç¨‹åºé…ç½®å®Œæˆï¼šå…¨ä»“æ¨¡å¼ + å•å‘æŒä»“")
        return True

    except Exception as e:
        logger.error(f"âŒ äº¤æ˜“æ‰€è®¾ç½®å¤±è´¥: {e}")
        import traceback
        logger.error(traceback.format_exc())
        return False


# å…¨å±€å˜é‡å­˜å‚¨å†å²æ•°æ®
price_history = []
signal_history = []
position = None


def calculate_intelligent_position(signal_data, price_data, current_position):
    """è®¡ç®—æ™ºèƒ½ä»“ä½å¤§å° - ä¿®å¤ç‰ˆ"""
    config = TRADE_CONFIG['position_management']

    # ğŸ†• æ–°å¢ï¼šå¦‚æœç¦ç”¨æ™ºèƒ½ä»“ä½ï¼Œä½¿ç”¨å›ºå®šä»“ä½
    if not config.get('enable_intelligent_position', True):
        fixed_contracts = 6.2  # å›ºå®šä»“ä½å¤§å°ï¼Œå¯ä»¥æ ¹æ®éœ€è¦è°ƒæ•´
        logger.info(f"ğŸ”§ æ™ºèƒ½ä»“ä½å·²ç¦ç”¨ï¼Œä½¿ç”¨å›ºå®šä»“ä½: {fixed_contracts} å¼ ")
        return fixed_contracts

    try:
        # è·å–è´¦æˆ·ä½™é¢
        balance = exchange.fetch_balance()
        usdt_balance = balance['USDT']['free']

        # åŸºç¡€USDTæŠ•å…¥
        base_usdt = config['base_usdt_amount']
        logger.info(f"ğŸ’° å¯ç”¨USDTä½™é¢: {usdt_balance:.2f}, ä¸‹å•åŸºæ•°{base_usdt}")

        # æ ¹æ®ä¿¡å¿ƒç¨‹åº¦è°ƒæ•´ - ä¿®å¤è¿™é‡Œ
        confidence_multiplier = {
            'HIGH': config['high_confidence_multiplier'],
            'MEDIUM': config['medium_confidence_multiplier'],
            'LOW': config['low_confidence_multiplier']
        }.get(signal_data['confidence'], 1.0)  # æ·»åŠ é»˜è®¤å€¼

        # æ ¹æ®è¶‹åŠ¿å¼ºåº¦è°ƒæ•´
        trend = price_data['trend_analysis'].get('overall', 'éœ‡è¡æ•´ç†')
        if trend in ['å¼ºåŠ¿ä¸Šæ¶¨', 'å¼ºåŠ¿ä¸‹è·Œ']:
            trend_multiplier = config['trend_strength_multiplier']
        else:
            trend_multiplier = 1.0

        # æ ¹æ®RSIçŠ¶æ€è°ƒæ•´ï¼ˆè¶…ä¹°è¶…å–åŒºåŸŸå‡ä»“ï¼‰
        rsi = price_data['technical_data'].get('rsi', 50)
        if rsi > 75 or rsi < 25:
            rsi_multiplier = 0.7
        else:
            rsi_multiplier = 1.0

        # æ ¹æ®æ³¢åŠ¨ç‡è°ƒæ•´ä»“ä½
        volatility_multiplier = 1.0
        bb_upper = price_data['technical_data'].get('bb_upper', 0)
        bb_lower = price_data['technical_data'].get('bb_lower', 0)
        bb_width = bb_upper - bb_lower
        
        if bb_width > 0:
            # è®¡ç®—æ³¢åŠ¨ç‡ï¼ˆå¸ƒæ—å¸¦å®½åº¦ä¸ä»·æ ¼çš„æ¯”ç‡ï¼‰
            volatility = bb_width / price_data['price']
            if volatility < 0.01:  # ä½æ³¢åŠ¨
                volatility_multiplier = config['volatility_multiplier']['low']
            elif volatility > 0.03:  # é«˜æ³¢åŠ¨
                volatility_multiplier = config['volatility_multiplier']['high']
            else:  # ä¸­ç­‰æ³¢åŠ¨
                volatility_multiplier = config['volatility_multiplier']['medium']
            logger.info(f"ğŸ“Š æ³¢åŠ¨ç‡: {volatility:.4f}, æ³¢åŠ¨ç‡å€æ•°: {volatility_multiplier}")

        # æ ¹æ®æˆäº¤é‡è°ƒæ•´ä»“ä½
        volume_multiplier = 1.0
        volume_ratio = price_data['technical_data'].get('volume_ratio', 1.0)
        if volume_ratio < 0.8:  # ä½æˆäº¤é‡
            volume_multiplier = config['volume_multiplier']['low']
        elif volume_ratio > 1.2:  # é«˜æˆäº¤é‡
            volume_multiplier = config['volume_multiplier']['high']
        else:  # ä¸­ç­‰æˆäº¤é‡
            volume_multiplier = config['volume_multiplier']['medium']
        logger.info(f"ğŸ“Š æˆäº¤é‡æ¯”ç‡: {volume_ratio:.2f}, æˆäº¤é‡å€æ•°: {volume_multiplier}")

        # æ ¹æ®è¿ç»­åŒå‘äº¤æ˜“è°ƒæ•´ä»“ä½ï¼ˆä»“ä½è¡°å‡ï¼‰
        decay_multiplier = 1.0
        if len(signal_history) >= 2:
            last_signals = [s['signal'] for s in signal_history[-2:]]
            # å¦‚æœæœ€è¿‘ä¸¤æ¬¡ä¿¡å·ç›¸åŒä¸”éƒ½æ˜¯BUYæˆ–SELLï¼Œåˆ™åº”ç”¨è¡°å‡
            if len(set(last_signals)) == 1 and last_signals[0] in ['BUY', 'SELL']:
                decay_multiplier = config['position_decay_factor']
                logger.info(f"âš ï¸ è¿ç»­åŒå‘äº¤æ˜“ï¼Œåº”ç”¨ä»“ä½è¡°å‡: {decay_multiplier}")

        # è®¡ç®—å»ºè®®æŠ•å…¥USDTé‡‘é¢
        suggested_usdt = base_usdt * confidence_multiplier * trend_multiplier * rsi_multiplier * volatility_multiplier * volume_multiplier * decay_multiplier

        # é£é™©ç®¡ç†ï¼šä¸è¶…è¿‡æ€»èµ„é‡‘çš„æŒ‡å®šæ¯”ä¾‹ - åˆ é™¤é‡å¤å®šä¹‰
        max_usdt = usdt_balance * config['max_position_ratio'] / 100  # è½¬æ¢ä¸ºå°æ•°
        final_usdt = min(suggested_usdt, max_usdt)

        # æ­£ç¡®çš„åˆçº¦å¼ æ•°è®¡ç®—ï¼
        # å…¬å¼ï¼šåˆçº¦å¼ æ•° = (æŠ•å…¥USDT) / (å½“å‰ä»·æ ¼ * åˆçº¦ä¹˜æ•°)
        contract_size = (final_usdt) / (price_data['price'] * TRADE_CONFIG['contract_size'])

        logger.info(f"ğŸ“Š ä»“ä½è®¡ç®—è¯¦æƒ…:")
        logger.info(f"   - åŸºç¡€USDT: {base_usdt}")
        logger.info(f"   - ä¿¡å¿ƒå€æ•°: {confidence_multiplier}")
        logger.info(f"   - è¶‹åŠ¿å€æ•°: {trend_multiplier}")
        logger.info(f"   - RSIå€æ•°: {rsi_multiplier}")
        logger.info(f"   - æ³¢åŠ¨ç‡å€æ•°: {volatility_multiplier}")
        logger.info(f"   - æˆäº¤é‡å€æ•°: {volume_multiplier}")
        logger.info(f"   - è¡°å‡å€æ•°: {decay_multiplier}")
        logger.info(f"   - å»ºè®®USDT: {suggested_usdt:.2f}")
        logger.info(f"   - æœ€ç»ˆUSDT: {final_usdt:.2f}")
        logger.info(f"   - åˆçº¦ä¹˜æ•°: {TRADE_CONFIG['contract_size']}")
        logger.info(f"   - è®¡ç®—åˆçº¦: {contract_size:.4f} å¼ ")

        # ç²¾åº¦å¤„ç†ï¼šOKX BTCåˆçº¦æœ€å°äº¤æ˜“å•ä½ä¸º0.01å¼ 
        contract_size = round(contract_size, 2)  # ä¿ç•™2ä½å°æ•°

        # ç¡®ä¿æœ€å°äº¤æ˜“é‡
        min_contracts = max(TRADE_CONFIG.get('min_amount', 0.01), config.get('min_position', 0.01))
        if contract_size < min_contracts:
            contract_size = min_contracts
            logger.info(f"âš ï¸ ä»“ä½å°äºæœ€å°å€¼ï¼Œè°ƒæ•´ä¸º: {contract_size} å¼ ")

        logger.info(f"ğŸ¯ æœ€ç»ˆä»“ä½: {final_usdt:.2f} USDT â†’ {contract_size:.2f} å¼ åˆçº¦")
        return contract_size

    except Exception as e:
        logger.error(f"âŒ ä»“ä½è®¡ç®—å¤±è´¥ï¼Œä½¿ç”¨åŸºç¡€ä»“ä½: {e}")
        # ç´§æ€¥å¤‡ç”¨è®¡ç®—
        base_usdt = config['base_usdt_amount']
        contract_size = (base_usdt * TRADE_CONFIG['leverage']) / (
                    price_data['price'] * TRADE_CONFIG.get('contract_size', 0.01))
        return round(max(contract_size, TRADE_CONFIG.get('min_amount', 0.01)), 2)


def calculate_technical_indicators(df):
    """è®¡ç®—æŠ€æœ¯æŒ‡æ ‡ - æ¥è‡ªç¬¬ä¸€ä¸ªç­–ç•¥"""
    try:
        # ç§»åŠ¨å¹³å‡çº¿
        df['sma_5'] = df['close'].rolling(window=5, min_periods=1).mean()
        df['sma_20'] = df['close'].rolling(window=20, min_periods=1).mean()
        df['sma_50'] = df['close'].rolling(window=50, min_periods=1).mean()

        # æŒ‡æ•°ç§»åŠ¨å¹³å‡çº¿
        df['ema_12'] = df['close'].ewm(span=12).mean()
        df['ema_26'] = df['close'].ewm(span=26).mean()
        df['macd'] = df['ema_12'] - df['ema_26']
        df['macd_signal'] = df['macd'].ewm(span=9).mean()
        df['macd_histogram'] = df['macd'] - df['macd_signal']

        # ç›¸å¯¹å¼ºå¼±æŒ‡æ•° (RSI)
        delta = df['close'].diff()
        gain = (delta.where(delta > 0, 0)).rolling(14).mean()
        loss = (-delta.where(delta < 0, 0)).rolling(14).mean()
        rs = gain / loss
        df['rsi'] = 100 - (100 / (1 + rs))

        # å¸ƒæ—å¸¦
        df['bb_middle'] = df['close'].rolling(20).mean()
        bb_std = df['close'].rolling(20).std()
        df['bb_upper'] = df['bb_middle'] + (bb_std * 2)
        df['bb_lower'] = df['bb_middle'] - (bb_std * 2)
        df['bb_position'] = (df['close'] - df['bb_lower']) / (df['bb_upper'] - df['bb_lower'])

        # æˆäº¤é‡å‡çº¿
        df['volume_ma'] = df['volume'].rolling(20).mean()
        df['volume_ratio'] = df['volume'] / df['volume_ma']

        # æ”¯æ’‘é˜»åŠ›ä½
        df['resistance'] = df['high'].rolling(20).max()
        df['support'] = df['low'].rolling(20).min()

        # å¡«å……NaNå€¼
        df = df.bfill().ffill()

        return df
    except Exception as e:
        logger.error(f"æŠ€æœ¯æŒ‡æ ‡è®¡ç®—å¤±è´¥: {e}")
        return df


def get_support_resistance_levels(df, lookback=20):
    """è®¡ç®—æ”¯æ’‘é˜»åŠ›ä½"""
    try:
        recent_high = df['high'].tail(lookback).max()
        recent_low = df['low'].tail(lookback).min()
        current_price = df['close'].iloc[-1]

        resistance_level = recent_high
        support_level = recent_low

        # åŠ¨æ€æ”¯æ’‘é˜»åŠ›ï¼ˆåŸºäºå¸ƒæ—å¸¦ï¼‰
        bb_upper = df['bb_upper'].iloc[-1]
        bb_lower = df['bb_lower'].iloc[-1]

        return {
            'static_resistance': resistance_level,
            'static_support': support_level,
            'dynamic_resistance': bb_upper,
            'dynamic_support': bb_lower,
            'price_vs_resistance': ((resistance_level - current_price) / current_price) * 100,
            'price_vs_support': ((current_price - support_level) / support_level) * 100
        }
    except Exception as e:
        logger.error(f"æ”¯æ’‘é˜»åŠ›è®¡ç®—å¤±è´¥: {e}")
        return {}


def get_sentiment_indicators():
    """è·å–æƒ…ç»ªæŒ‡æ ‡ - ç®€æ´ç‰ˆæœ¬"""
    try:
        API_URL = "https://service.cryptoracle.network/openapi/v2/endpoint"
        API_KEY = "2b144650-4a16-4eb5-bbcd-70824577687b"

        # è·å–æœ€è¿‘4å°æ—¶æ•°æ®
        end_time = datetime.now()
        start_time = end_time - timedelta(hours=4)

        request_body = {
            "apiKey": API_KEY,
            "endpoints": ["CO-A-02-01", "CO-A-02-02"],  # åªä¿ç•™æ ¸å¿ƒæŒ‡æ ‡
            "startTime": start_time.strftime("%Y-%m-%d %H:%M:%S"),
            "endTime": end_time.strftime("%Y-%m-%d %H:%M:%S"),
            "timeType": "15m",
            "token": ["BTC"]
        }

        headers = {"Content-Type": "application/json", "X-API-KEY": API_KEY}
        response = requests.post(API_URL, json=request_body, headers=headers)

        if response.status_code == 200:
            data = response.json()
            if data.get("code") == 200 and data.get("data"):
                time_periods = data["data"][0]["timePeriods"]

                # æŸ¥æ‰¾ç¬¬ä¸€ä¸ªæœ‰æœ‰æ•ˆæ•°æ®çš„æ—¶é—´æ®µ
                for period in time_periods:
                    period_data = period.get("data", [])

                    sentiment = {}
                    valid_data_found = False

                    for item in period_data:
                        endpoint = item.get("endpoint")
                        value = item.get("value", "").strip()

                        if value:  # åªå¤„ç†éç©ºå€¼
                            try:
                                if endpoint in ["CO-A-02-01", "CO-A-02-02"]:
                                    sentiment[endpoint] = float(value)
                                    valid_data_found = True
                            except (ValueError, TypeError):
                                continue

                    # å¦‚æœæ‰¾åˆ°æœ‰æ•ˆæ•°æ®
                    if valid_data_found and "CO-A-02-01" in sentiment and "CO-A-02-02" in sentiment:
                        positive = sentiment['CO-A-02-01']
                        negative = sentiment['CO-A-02-02']
                        net_sentiment = positive - negative

                        # æ­£ç¡®çš„æ—¶é—´å»¶è¿Ÿè®¡ç®—
                        data_delay = int((datetime.now() - datetime.strptime(
                            period['startTime'], '%Y-%m-%d %H:%M:%S')).total_seconds() // 60)

                        logger.info(f"âœ… ä½¿ç”¨æƒ…ç»ªæ•°æ®æ—¶é—´: {period['startTime']} (å»¶è¿Ÿ: {data_delay}åˆ†é’Ÿ)")

                        return {
                            'positive_ratio': positive,
                            'negative_ratio': negative,
                            'net_sentiment': net_sentiment,
                            'data_time': period['startTime'],
                            'data_delay_minutes': data_delay
                        }

                logger.error("âŒ æ‰€æœ‰æ—¶é—´æ®µæ•°æ®éƒ½ä¸ºç©º")
                return None

        return None
    except Exception as e:
        logger.error(f"æƒ…ç»ªæŒ‡æ ‡è·å–å¤±è´¥: {e}")
        return None


def get_market_trend(df):
    """åˆ¤æ–­å¸‚åœºè¶‹åŠ¿"""
    try:
        current_price = df['close'].iloc[-1]

        # å¤šæ—¶é—´æ¡†æ¶è¶‹åŠ¿åˆ†æ
        trend_short = "ä¸Šæ¶¨" if current_price > df['sma_20'].iloc[-1] else "ä¸‹è·Œ"
        trend_medium = "ä¸Šæ¶¨" if current_price > df['sma_50'].iloc[-1] else "ä¸‹è·Œ"

        # MACDè¶‹åŠ¿
        macd_trend = "bullish" if df['macd'].iloc[-1] > df['macd_signal'].iloc[-1] else "bearish"

        # ç»¼åˆè¶‹åŠ¿åˆ¤æ–­
        if trend_short == "ä¸Šæ¶¨" and trend_medium == "ä¸Šæ¶¨":
            overall_trend = "å¼ºåŠ¿ä¸Šæ¶¨"
        elif trend_short == "ä¸‹è·Œ" and trend_medium == "ä¸‹è·Œ":
            overall_trend = "å¼ºåŠ¿ä¸‹è·Œ"
        else:
            overall_trend = "éœ‡è¡æ•´ç†"

        return {
            'short_term': trend_short,
            'medium_term': trend_medium,
            'macd': macd_trend,
            'overall': overall_trend,
            'rsi_level': df['rsi'].iloc[-1]
        }
    except Exception as e:
        logger.error(f"è¶‹åŠ¿åˆ†æå¤±è´¥: {e}")
        return {}


def get_btc_ohlcv_enhanced():
    """å¢å¼ºç‰ˆï¼šè·å–BTC Kçº¿æ•°æ®å¹¶è®¡ç®—æŠ€æœ¯æŒ‡æ ‡"""
    try:
        # è·å–Kçº¿æ•°æ®
        ohlcv = exchange.fetch_ohlcv(TRADE_CONFIG['symbol'], TRADE_CONFIG['timeframe'],
                                     limit=TRADE_CONFIG['data_points'])

        df = pd.DataFrame(ohlcv, columns=['timestamp', 'open', 'high', 'low', 'close', 'volume'])
        df['timestamp'] = pd.to_datetime(df['timestamp'], unit='ms')

        # è®¡ç®—æŠ€æœ¯æŒ‡æ ‡
        df = calculate_technical_indicators(df)

        current_data = df.iloc[-1]
        previous_data = df.iloc[-2]

        # è·å–æŠ€æœ¯åˆ†ææ•°æ®
        trend_analysis = get_market_trend(df)
        levels_analysis = get_support_resistance_levels(df)

        return {
            'price': current_data['close'],
            'timestamp': datetime.now().strftime('%Y-%m-%d %H:%M:%S'),
            'high': current_data['high'],
            'low': current_data['low'],
            'volume': current_data['volume'],
            'timeframe': TRADE_CONFIG['timeframe'],
            'price_change': ((current_data['close'] - previous_data['close']) / previous_data['close']) * 100,
            'kline_data': df[['timestamp', 'open', 'high', 'low', 'close', 'volume']].tail(10).to_dict('records'),
            'technical_data': {
                'sma_5': current_data.get('sma_5', 0),
                'sma_20': current_data.get('sma_20', 0),
                'sma_50': current_data.get('sma_50', 0),
                'rsi': current_data.get('rsi', 0),
                'macd': current_data.get('macd', 0),
                'macd_signal': current_data.get('macd_signal', 0),
                'macd_histogram': current_data.get('macd_histogram', 0),
                'bb_upper': current_data.get('bb_upper', 0),
                'bb_lower': current_data.get('bb_lower', 0),
                'bb_position': current_data.get('bb_position', 0),
                'volume_ratio': current_data.get('volume_ratio', 0)
            },
            'trend_analysis': trend_analysis,
            'levels_analysis': levels_analysis,
            'full_data': df
        }
    except Exception as e:
        logger.error(f"è·å–å¢å¼ºKçº¿æ•°æ®å¤±è´¥: {e}")
        return None


def generate_technical_analysis_text(price_data):
    """ç”ŸæˆæŠ€æœ¯åˆ†ææ–‡æœ¬"""
    if 'technical_data' not in price_data:
        return "æŠ€æœ¯æŒ‡æ ‡æ•°æ®ä¸å¯ç”¨"

    tech = price_data['technical_data']
    trend = price_data.get('trend_analysis', {})
    levels = price_data.get('levels_analysis', {})

    # æ£€æŸ¥æ•°æ®æœ‰æ•ˆæ€§
    def safe_float(value, default=0):
        return float(value) if value and pd.notna(value) else default

    analysis_text = f"""
    ã€æŠ€æœ¯æŒ‡æ ‡åˆ†æã€‘
    ğŸ“ˆ ç§»åŠ¨å¹³å‡çº¿:
    - 5å‘¨æœŸ: {safe_float(tech['sma_5']):.2f} | ä»·æ ¼ç›¸å¯¹: {(price_data['price'] - safe_float(tech['sma_5'])) / safe_float(tech['sma_5']) * 100:+.2f}%
    - 20å‘¨æœŸ: {safe_float(tech['sma_20']):.2f} | ä»·æ ¼ç›¸å¯¹: {(price_data['price'] - safe_float(tech['sma_20'])) / safe_float(tech['sma_20']) * 100:+.2f}%
    - 50å‘¨æœŸ: {safe_float(tech['sma_50']):.2f} | ä»·æ ¼ç›¸å¯¹: {(price_data['price'] - safe_float(tech['sma_50'])) / safe_float(tech['sma_50']) * 100:+.2f}%

    ğŸ¯ è¶‹åŠ¿åˆ†æ:
    - çŸ­æœŸè¶‹åŠ¿: {trend.get('short_term', 'N/A')}
    - ä¸­æœŸè¶‹åŠ¿: {trend.get('medium_term', 'N/A')}
    - æ•´ä½“è¶‹åŠ¿: {trend.get('overall', 'N/A')}
    - MACDæ–¹å‘: {trend.get('macd', 'N/A')}

    ğŸ“Š åŠ¨é‡æŒ‡æ ‡:
    - RSI: {safe_float(tech['rsi']):.2f} ({'è¶…ä¹°' if safe_float(tech['rsi']) > 70 else 'è¶…å–' if safe_float(tech['rsi']) < 30 else 'ä¸­æ€§'})
    - MACD: {safe_float(tech['macd']):.4f}
    - ä¿¡å·çº¿: {safe_float(tech['macd_signal']):.4f}

    ğŸšï¸ å¸ƒæ—å¸¦ä½ç½®: {safe_float(tech['bb_position']):.2%} ({'ä¸Šéƒ¨' if safe_float(tech['bb_position']) > 0.7 else 'ä¸‹éƒ¨' if safe_float(tech['bb_position']) < 0.3 else 'ä¸­éƒ¨'})

    ğŸ’° å…³é”®æ°´å¹³:
    - é™æ€é˜»åŠ›: {safe_float(levels.get('static_resistance', 0)):.2f}
    - é™æ€æ”¯æ’‘: {safe_float(levels.get('static_support', 0)):.2f}
    """
    return analysis_text


def get_current_position():
    """è·å–å½“å‰æŒä»“æƒ…å†µ - OKXç‰ˆæœ¬"""
    try:
        positions = exchange.fetch_positions([TRADE_CONFIG['symbol']])

        for pos in positions:
            if pos['symbol'] == TRADE_CONFIG['symbol']:
                contracts = float(pos['contracts']) if pos['contracts'] else 0

                if contracts > 0:
                    return {
                        'side': pos['side'],  # 'long' or 'short'
                        'size': contracts,
                        'entry_price': float(pos['entryPrice']) if pos['entryPrice'] else 0,
                        'unrealized_pnl': float(pos['unrealizedPnl']) if pos['unrealizedPnl'] else 0,
                        'leverage': float(pos['leverage']) if pos['leverage'] else TRADE_CONFIG['leverage'],
                        'symbol': pos['symbol']
                    }

        return None

    except Exception as e:
        logger.error(f"è·å–æŒä»“å¤±è´¥: {e}")
        import traceback
        logger.error(traceback.format_exc())
        return None


def safe_json_parse(json_str):
    """å®‰å…¨è§£æJSONï¼Œå¤„ç†æ ¼å¼ä¸è§„èŒƒçš„æƒ…å†µ"""
    try:
        return json.loads(json_str)
    except json.JSONDecodeError:
        try:
            # ä¿®å¤å¸¸è§çš„JSONæ ¼å¼é—®é¢˜
            json_str = json_str.replace("'", '"')
            json_str = re.sub(r'(\w+):', r'"\1":', json_str)
            json_str = re.sub(r',\s*}', '}', json_str)
            json_str = re.sub(r',\s*]', ']', json_str)
            return json.loads(json_str)
        except json.JSONDecodeError as e:
            logger.error(f"JSONè§£æå¤±è´¥ï¼ŒåŸå§‹å†…å®¹: {json_str}")
            logger.error(f"é”™è¯¯è¯¦æƒ…: {e}")
            return None


def create_fallback_signal(price_data):
    """åˆ›å»ºå¤‡ç”¨äº¤æ˜“ä¿¡å·"""
    return {
        "signal": "HOLD",
        "reason": "å› æŠ€æœ¯åˆ†ææš‚æ—¶ä¸å¯ç”¨ï¼Œé‡‡å–ä¿å®ˆç­–ç•¥",
        "stop_loss": price_data['price'] * 0.98,  # -2%
        "take_profit": price_data['price'] * 1.02,  # +2%
        "confidence": "LOW",
        "is_fallback": True
    }


def analyze_with_deepseek(price_data):
    """ä½¿ç”¨DeepSeekåˆ†æå¸‚åœºå¹¶ç”Ÿæˆäº¤æ˜“ä¿¡å·ï¼ˆå¢å¼ºç‰ˆï¼‰"""

    # ç”ŸæˆæŠ€æœ¯åˆ†ææ–‡æœ¬
    technical_analysis = generate_technical_analysis_text(price_data)

    # æ„å»ºKçº¿æ•°æ®æ–‡æœ¬
    kline_text = f"ã€æœ€è¿‘5æ ¹{TRADE_CONFIG['timeframe']}Kçº¿æ•°æ®ã€‘\n"
    for i, kline in enumerate(price_data['kline_data'][-5:]):
        trend = "é˜³çº¿" if kline['close'] > kline['open'] else "é˜´çº¿"
        change = ((kline['close'] - kline['open']) / kline['open']) * 100
        kline_text += f"Kçº¿{i + 1}: {trend} å¼€ç›˜:{kline['open']:.2f} æ”¶ç›˜:{kline['close']:.2f} æ¶¨è·Œ:{change:+.2f}%\n"

    # æ·»åŠ ä¸Šæ¬¡äº¤æ˜“ä¿¡å·
    signal_text = ""
    if signal_history:
        last_signal = signal_history[-1]
        signal_text = f"\nã€ä¸Šæ¬¡äº¤æ˜“ä¿¡å·ã€‘\nä¿¡å·: {last_signal.get('signal', 'N/A')}\nä¿¡å¿ƒ: {last_signal.get('confidence', 'N/A')}"

    # è·å–æƒ…ç»ªæ•°æ®
    sentiment_data = get_sentiment_indicators()
    # ç®€åŒ–æƒ…ç»ªæ–‡æœ¬ å¤šäº†æ²¡ç”¨
    if sentiment_data:
        sign = '+' if sentiment_data['net_sentiment'] >= 0 else ''
        sentiment_text = f"ã€å¸‚åœºæƒ…ç»ªã€‘ä¹è§‚{sentiment_data['positive_ratio']:.1%} æ‚²è§‚{sentiment_data['negative_ratio']:.1%} å‡€å€¼{sign}{sentiment_data['net_sentiment']:.3f}"
    else:
        sentiment_text = "ã€å¸‚åœºæƒ…ç»ªã€‘æ•°æ®æš‚ä¸å¯ç”¨"

    # æ·»åŠ å½“å‰æŒä»“ä¿¡æ¯
    current_pos = get_current_position()
    position_text = "æ— æŒä»“" if not current_pos else f"{current_pos['side']}ä»“, æ•°é‡: {current_pos['size']}, ç›ˆäº: {current_pos['unrealized_pnl']:.2f}USDT"
    pnl_text = f", æŒä»“ç›ˆäº: {current_pos['unrealized_pnl']:.2f} USDT" if current_pos else ""

    prompt = f"""
ä½ æ˜¯ä¸€ä¸ªä¸“ä¸šçš„åŠ å¯†è´§å¸äº¤æ˜“åˆ†æå¸ˆï¼Œä¸“æ³¨äºBTC/USDT {TRADE_CONFIG['timeframe']}å‘¨æœŸçš„è¶‹åŠ¿åˆ†æå’Œäº¤æ˜“å†³ç­–ã€‚

## è¾“å…¥æ•°æ®

### Kçº¿æ•°æ®
{kline_text}

### æŠ€æœ¯æŒ‡æ ‡åˆ†æ
{technical_analysis}

### å†å²ä¿¡å·å‚è€ƒ
{signal_text}

### å¸‚åœºæƒ…ç»ª
{sentiment_text}

### å½“å‰å¸‚åœºçŠ¶æ€
- å½“å‰ä»·æ ¼: ${price_data['price']:,.2f}
- æ—¶é—´: {price_data['timestamp']}
- æœ¬Kçº¿æœ€é«˜: ${price_data['high']:,.2f}
- æœ¬Kçº¿æœ€ä½: ${price_data['low']:,.2f}
- æœ¬Kçº¿æˆäº¤é‡: {price_data['volume']:.2f} BTC
- ä»·æ ¼å˜åŒ–: {price_data['price_change']:+.2f}%
- å½“å‰æŒä»“: {position_text}{pnl_text}

## åˆ†ææ¡†æ¶

### æ ¸å¿ƒåˆ†æç»´åº¦ï¼ˆæŒ‰é‡è¦æ€§æ’åºï¼‰
1. **è¶‹åŠ¿åˆ†æ**ï¼ˆæƒé‡40%ï¼‰
   - å¤šæ—¶é—´æ¡†æ¶è¶‹åŠ¿ä¸€è‡´æ€§ï¼ˆ5/20/50å‘¨æœŸå‡çº¿ï¼‰
   - MACDè¶‹åŠ¿ç¡®è®¤
   - ä»·æ ¼ä¸å…³é”®æ”¯æ’‘é˜»åŠ›ä½å…³ç³»

2. **æŠ€æœ¯ä¿¡å·ç¡®è®¤**ï¼ˆæƒé‡35%ï¼‰
   - RSIè¶…ä¹°è¶…å–çŠ¶æ€
   - å¸ƒæ—å¸¦ä½ç½®å’Œæ”¶ç¼©æ‰©å¼ çŠ¶æ€
   - æˆäº¤é‡ä¸ä»·æ ¼å˜åŒ–çš„åŒ¹é…åº¦

3. **å¸‚åœºæƒ…ç»ª**ï¼ˆæƒé‡15%ï¼‰
   - æƒ…ç»ªä¸æŠ€æœ¯é¢çš„ä¸€è‡´æ€§
   - æƒ…ç»ªæç«¯å€¼çš„å‚è€ƒæ„ä¹‰

4. **æŒä»“é£é™©ç®¡ç†**ï¼ˆæƒé‡10%ï¼‰
   - å½“å‰æŒä»“ç›ˆäºçŠ¶å†µ
   - æ­¢æŸå’Œæ­¢ç›ˆä½ç½®åˆç†æ€§

### äº¤æ˜“å†³ç­–åŸåˆ™

#### ä¿¡å·ç”Ÿæˆè§„åˆ™
- **BUYä¿¡å·**: æ˜ç¡®çš„ä¸Šæ¶¨è¶‹åŠ¿ç¡®è®¤ï¼Œå¤šä¸ªæŒ‡æ ‡å…±æŒ¯
- **SELLä¿¡å·**: æ˜ç¡®çš„ä¸‹è·Œè¶‹åŠ¿ç¡®è®¤ï¼Œå¤šä¸ªæŒ‡æ ‡å…±æŒ¯
- **HOLDä¿¡å·**: è¶‹åŠ¿ä¸æ˜ç¡®æˆ–éœ‡è¡å¸‚ï¼Œé¿å…æ— è°“äº¤æ˜“

#### é£é™©æ§åˆ¶åŸåˆ™
1. **è¶‹åŠ¿ä¼˜å…ˆ**: è¶‹åŠ¿ç¡®è®¤åç«‹å³è¡ŒåŠ¨ï¼Œé¿å…è¿‡åº¦ç­‰å¾…å®Œç¾ä¿¡å·
2. **é¿å…é¢‘ç¹äº¤æ˜“**: åŒä¸€æ–¹å‘ä¿¡å·å¯é€‚å½“åŠ ä»“ï¼Œåå‘ä¿¡å·éœ€ä¸¥æ ¼ç¡®è®¤
3. **ä»“ä½ç®¡ç†**: æ ¹æ®ä¿¡å·ä¿¡å¿ƒåº¦è°ƒæ•´ä»“ä½ï¼ˆLOW:50%, MEDIUM:75%, HIGH:100%ï¼‰

#### ä¿¡å¿ƒåº¦è¯„ä¼°æ ‡å‡†
- **HIGH**: è¶‹åŠ¿æ˜ç¡®ï¼Œ3ä¸ªä»¥ä¸ŠæŒ‡æ ‡ç¡®è®¤ï¼Œæƒ…ç»ªé¢ä¸€è‡´
- **MEDIUM**: è¶‹åŠ¿è¾ƒæ˜ç¡®ï¼Œ2ä¸ªæŒ‡æ ‡ç¡®è®¤ï¼Œæƒ…ç»ªé¢ä¸­æ€§
- **LOW**: è¶‹åŠ¿ä¸æ˜ç¡®ï¼ŒæŒ‡æ ‡æ··æ‚ï¼Œæƒ…ç»ªé¢èƒŒç¦»

## è¾“å‡ºè¦æ±‚

è¯·åŸºäºä»¥ä¸Šåˆ†æï¼Œæä¾›ä¸€ä¸ªæ˜ç¡®çš„äº¤æ˜“å†³ç­–ï¼š

1. **signal**: äº¤æ˜“ä¿¡å·ï¼ˆBUY/SELL/HOLDï¼‰
2. **reason**: ç®€æ˜æ‰¼è¦çš„åˆ†æç†ç”±ï¼ˆä¸è¶…è¿‡100å­—ï¼‰
3. **stop_loss**: æ­¢æŸä»·æ ¼ï¼ˆå…·ä½“æ•°å€¼ï¼‰
4. **take_profit**: æ­¢ç›ˆä»·æ ¼ï¼ˆå…·ä½“æ•°å€¼ï¼‰
5. **confidence**: ä¿¡å¿ƒåº¦ï¼ˆHIGH/MEDIUM/LOWï¼‰

è¯·ä¸¥æ ¼æŒ‰ç…§ä»¥ä¸‹JSONæ ¼å¼è¾“å‡ºï¼Œä¸è¦åŒ…å«å…¶ä»–å†…å®¹ï¼š
{{
    "signal": "BUY|SELL|HOLD",
    "reason": "ç®€è¦åˆ†æç†ç”±(åŒ…å«è¶‹åŠ¿åˆ¤æ–­å’ŒæŠ€æœ¯ä¾æ®)",
    "stop_loss": å…·ä½“ä»·æ ¼,
    "take_profit": å…·ä½“ä»·æ ¼,
    "confidence": "HIGH|MEDIUM|LOW"
}}
"""

    try:
        response = deepseek_client.chat.completions.create(
            model="deepseek-chat",
            messages=[
                {"role": "system",
                 "content": f"""æ‚¨æ˜¯ä¸€ä½ç»éªŒä¸°å¯Œçš„åŠ å¯†è´§å¸äº¤æ˜“ä¸“å®¶ï¼Œå…·æœ‰ä»¥ä¸‹ç‰¹è´¨ï¼š
1. ä¸“ç²¾äºBTC/USDTäº¤æ˜“å¯¹çš„{TRADE_CONFIG['timeframe']}å‘¨æœŸæŠ€æœ¯åˆ†æ
2. æ“…é•¿å¤šæ—¶é—´æ¡†æ¶è¶‹åŠ¿è¯†åˆ«å’Œç¡®è®¤
3. ç²¾é€šé£é™©ç®¡ç†ï¼Œå§‹ç»ˆåšæŒ"ä¿ä½æœ¬é‡‘"çš„é¦–è¦åŸåˆ™
4. å…·å¤‡ä¼˜ç§€çš„å¸‚åœºæƒ…ç»ªè§£è¯»èƒ½åŠ›ï¼Œèƒ½ç»“åˆæŠ€æœ¯é¢å’Œæƒ…ç»ªé¢åšå‡ºç»¼åˆåˆ¤æ–­
5. ä¸¥æ ¼éµå®ˆäº¤æ˜“çºªå¾‹ï¼Œé¿å…é¢‘ç¹äº¤æ˜“å’Œæƒ…ç»ªåŒ–å†³ç­–

æ‚¨çš„ä»»åŠ¡æ˜¯åŸºäºæä¾›çš„æ•°æ®è¿›è¡Œä¸“ä¸šåˆ†æï¼Œå¹¶è¾“å‡ºç¬¦åˆè§„èŒƒçš„äº¤æ˜“ä¿¡å·ã€‚è¯·ç‰¹åˆ«æ³¨æ„ï¼š
- ä¿¡å·å¿…é¡»åŸºäºå®¢è§‚æ•°æ®ï¼Œé¿å…ä¸»è§‚è‡†æ–­
- ä¸¥æ ¼æŒ‰ç…§æƒé‡åˆ†é…è¿›è¡Œç»¼åˆè¯„ä¼°
- å§‹ç»ˆå°†é£é™©æ§åˆ¶æ”¾åœ¨é¦–ä½
- ä¿æŒä¿¡å·çš„ä¸€è‡´æ€§å’Œå¯æ‰§è¡Œæ€§"""},
                {"role": "user", "content": prompt}
            ],
            stream=False,
            temperature=0.1
        )

        # å®‰å…¨è§£æJSON
        result = response.choices[0].message.content
        logger.info(f"DeepSeekåŸå§‹å›å¤: {result}")

        # æå–JSONéƒ¨åˆ†
        start_idx = result.find('{')
        end_idx = result.rfind('}') + 1

        if start_idx != -1 and end_idx != 0:
            json_str = result[start_idx:end_idx]
            signal_data = safe_json_parse(json_str)

            if signal_data is None:
                signal_data = create_fallback_signal(price_data)
        else:
            signal_data = create_fallback_signal(price_data)

        # éªŒè¯å¿…éœ€å­—æ®µ
        required_fields = ['signal', 'reason', 'stop_loss', 'take_profit', 'confidence']
        if not all(field in signal_data for field in required_fields):
            signal_data = create_fallback_signal(price_data)

        # ä¿å­˜ä¿¡å·åˆ°å†å²è®°å½•
        signal_data['timestamp'] = price_data['timestamp']
        signal_history.append(signal_data)
        if len(signal_history) > 30:
            signal_history.pop(0)

        # ä¿¡å·ç»Ÿè®¡
        signal_count = len([s for s in signal_history if s.get('signal') == signal_data['signal']])
        total_signals = len(signal_history)
        logger.info(f"ä¿¡å·ç»Ÿè®¡: {signal_data['signal']} (æœ€è¿‘{total_signals}æ¬¡ä¸­å‡ºç°{signal_count}æ¬¡)")

        # ä¿¡å·è¿ç»­æ€§æ£€æŸ¥
        if len(signal_history) >= 3:
            last_three = [s['signal'] for s in signal_history[-3:]]
            if len(set(last_three)) == 1:
                logger.warning(f"âš ï¸ æ³¨æ„ï¼šè¿ç»­3æ¬¡{signal_data['signal']}ä¿¡å·")

        return signal_data

    except Exception as e:
        logger.error(f"DeepSeekåˆ†æå¤±è´¥: {e}")
        return create_fallback_signal(price_data)


def execute_intelligent_trade(signal_data, price_data):
    """æ‰§è¡Œæ™ºèƒ½äº¤æ˜“ - OKXç‰ˆæœ¬ï¼ˆæ”¯æŒåŒæ–¹å‘åŠ ä»“å‡ä»“ï¼‰"""
    global position
    
    # æ–°å¢ï¼šè®°å½•HOLDä¿¡å·å‡ºç°æ¬¡æ•°
    if not hasattr(execute_intelligent_trade, 'hold_count'):
        execute_intelligent_trade.hold_count = 0
        execute_intelligent_trade.base_hold_position = None

    current_position = get_current_position()

    # æ›´æ–°HOLDä¿¡å·è®¡æ•°å™¨
    if signal_data['signal'] == 'HOLD':
        execute_intelligent_trade.hold_count += 1
        logger.info(f"ğŸ”” HOLDä¿¡å·è¿ç»­å‡ºç°æ¬¡æ•°: {execute_intelligent_trade.hold_count}")
    else:
        # é‡ç½®è®¡æ•°å™¨
        if execute_intelligent_trade.hold_count > 0:
            logger.info(f"ğŸ”„ é‡ç½®HOLDä¿¡å·è®¡æ•°å™¨ï¼Œä¹‹å‰çš„è¿ç»­æ¬¡æ•°: {execute_intelligent_trade.hold_count}")
        execute_intelligent_trade.hold_count = 0
        execute_intelligent_trade.base_hold_position = None

    # æ–°å¢ï¼šHOLDä¿¡å·æ—¶å‡ä»“é€»è¾‘ï¼ˆæ ¹æ®é…ç½®å†³å®šåœ¨ç¬¬å‡ æ¬¡å‡ºç°æ—¶å‡ä»“å’Œå‡ä»“æ¯”ä¾‹ï¼‰
    hold_config = TRADE_CONFIG.get('hold_signal_config', {})
    if (signal_data['signal'] == 'HOLD' and 
        current_position and 
        hold_config.get('enable_hold_reduce', True)):
        
        reduce_on_nth = hold_config.get('reduce_on_nth_hold', 3)  # é»˜è®¤ç¬¬3æ¬¡
        reduce_ratio = hold_config.get('reduce_ratio', 0.5)  # é»˜è®¤å‡50%
        logger.info(f"ğŸ”§ HOLDä¿¡å·å‡ä»“åŠŸèƒ½å·²å¯ç”¨ï¼Œå°†åœ¨ç¬¬{reduce_on_nth}æ¬¡å‡ºç°æ—¶æŒ‰{reduce_ratio:.0%}æ¯”ä¾‹å‡ä»“")
        
        # å¦‚æœæ˜¯ç¬¬ä¸€æ¬¡é‡åˆ°HOLDä¿¡å·ï¼Œè®°å½•å½“å‰ä»“ä½ä¸ºåŸºå‡†
        if execute_intelligent_trade.base_hold_position is None:
            execute_intelligent_trade.base_hold_position = current_position['size']
            logger.info(f"ğŸ“ è®°å½•åŸºå‡†ä»“ä½: {execute_intelligent_trade.base_hold_position:.2f} å¼ ")
        
        # åœ¨æŒ‡å®šæ¬¡æ•°å‡ºç°HOLDä¿¡å·æ—¶å‡ä»“
        if execute_intelligent_trade.hold_count == reduce_on_nth:
            logger.info(f"ğŸ”§ HOLDä¿¡å·è¿ç»­ç¬¬{reduce_on_nth}æ¬¡å‡ºç°ï¼Œæ‰§è¡Œå‡ä»“æ“ä½œ...")
            
            # è®¡ç®—å‡ä»“åçš„ä»“ä½
            current_contracts = current_position['size']
            target_contracts = current_contracts * (1 - reduce_ratio)  # æŒ‰æ¯”ä¾‹å‡ä»“
            
            # ç¡®ä¿ä¸ä¼šä½äºæœ€å°äº¤æ˜“é‡
            min_contracts = TRADE_CONFIG.get('min_amount', 0.01)
            if target_contracts < min_contracts:
                target_contracts = 0  # å¦‚æœç›®æ ‡ä»“ä½å°äºæœ€å°äº¤æ˜“é‡ï¼Œåˆ™å…¨éƒ¨å¹³ä»“
            
            # è®¡ç®—éœ€è¦è°ƒæ•´çš„ä»“ä½
            size_diff = current_contracts - target_contracts
            
            # åªæœ‰å½“éœ€è¦å‡ä»“æ—¶æ‰æ‰§è¡Œ
            if size_diff >= min_contracts:  # éœ€è¦å‡ä»“
                reduce_size = round(size_diff, 2)
                
                try:
                    if current_position['side'] == 'long':
                        logger.info(f"ğŸ“‰ HOLDä¿¡å·å‡ä»“å¤šä»“: {current_contracts:.2f} â†’ {target_contracts:.2f} å¼  (å‡ä»“æ¯”ä¾‹: {reduce_ratio:.0%})")
                        exchange.create_market_order(
                            TRADE_CONFIG['symbol'],
                            'sell',
                            reduce_size,
                            params={'reduceOnly': True, 'tag': '60bb4a8d3416BCDE'}
                        )
                    elif current_position['side'] == 'short':
                        logger.info(f"ğŸ“‰ HOLDä¿¡å·å‡ä»“ç©ºä»“: {current_contracts:.2f} â†’ {target_contracts:.2f} å¼  (å‡ä»“æ¯”ä¾‹: {reduce_ratio:.0%})")
                        exchange.create_market_order(
                            TRADE_CONFIG['symbol'],
                            'buy',
                            reduce_size,
                            params={'reduceOnly': True, 'tag': '60bb4a8d3416BCDE'}
                        )
                    
                    logger.info("âœ… HOLDä¿¡å·å‡ä»“æ‰§è¡ŒæˆåŠŸ")
                    time.sleep(2)
                    position = get_current_position()
                    return
                    
                except Exception as e:
                    logger.error(f"âŒ HOLDä¿¡å·å‡ä»“å¤±è´¥: {e}")
                    import traceback
                    logger.error(traceback.format_exc())
            else:
                logger.info(f"âœ… å½“å‰ä»“ä½å·²æ¥è¿‘æœ€å°å€¼æˆ–ä¸ºé›¶: {current_contracts:.2f} å¼ ")
                return
        elif execute_intelligent_trade.hold_count > reduce_on_nth:
            logger.info(f"ğŸ“ HOLDä¿¡å·ç¬¬{execute_intelligent_trade.hold_count}æ¬¡å‡ºç°ï¼Œå·²æ‰§è¡Œè¿‡å‡ä»“æ“ä½œï¼Œä¿æŒç°çŠ¶")
            return
        elif execute_intelligent_trade.hold_count < reduce_on_nth:
            logger.info(f"ğŸ“ HOLDä¿¡å·ç¬¬{execute_intelligent_trade.hold_count}æ¬¡å‡ºç°ï¼Œæœªè¾¾åˆ°å‡ä»“æ¡ä»¶({reduce_on_nth}æ¬¡)")
            # ç»§ç»­æ‰§è¡Œåç»­é€»è¾‘

    # åŸæœ‰çš„é˜²æ­¢é¢‘ç¹åè½¬çš„é€»è¾‘ä¿æŒä¸å˜
    if current_position and signal_data['signal'] != 'HOLD':
        current_side = current_position['side']  # 'long' æˆ– 'short'

        if signal_data['signal'] == 'BUY':
            new_side = 'long'
        elif signal_data['signal'] == 'SELL':
            new_side = 'short'
        else:
            new_side = None

    # è®¡ç®—æ™ºèƒ½ä»“ä½
    position_size = calculate_intelligent_position(signal_data, price_data, current_position)

    logger.info(f"äº¤æ˜“ä¿¡å·: {signal_data['signal']}")
    logger.info(f"ä¿¡å¿ƒç¨‹åº¦: {signal_data['confidence']}")
    logger.info(f"æ™ºèƒ½ä»“ä½: {position_size:.2f} å¼ ")
    logger.info(f"ç†ç”±: {signal_data['reason']}")
    logger.info(f"å½“å‰æŒä»“: {current_position}")

    # é£é™©ç®¡ç†
    if signal_data['confidence'] == 'LOW' and not TRADE_CONFIG['test_mode']:
        logger.warning("âš ï¸ ä½ä¿¡å¿ƒä¿¡å·ï¼Œè·³è¿‡æ‰§è¡Œ")
        return

    if TRADE_CONFIG['test_mode']:
        logger.info("æµ‹è¯•æ¨¡å¼ - ä»…æ¨¡æ‹Ÿäº¤æ˜“")
        return

    try:
        # æ‰§è¡Œäº¤æ˜“é€»è¾‘ - æ”¯æŒåŒæ–¹å‘åŠ ä»“å‡ä»“
        if signal_data['signal'] == 'BUY':
            if current_position and current_position['side'] == 'short':
                # å…ˆæ£€æŸ¥ç©ºå¤´æŒä»“æ˜¯å¦çœŸå®å­˜åœ¨ä¸”æ•°é‡æ­£ç¡®
                if current_position['size'] > 0:
                    logger.info(f"å¹³ç©ºä»“ {current_position['size']:.2f} å¼ å¹¶å¼€å¤šä»“ {position_size:.2f} å¼ ...")
                    # å¹³ç©ºä»“
                    exchange.create_market_order(
                        TRADE_CONFIG['symbol'],
                        'buy',
                        current_position['size'],
                        params={'reduceOnly': True, 'tag': '60bb4a8d3416BCDE'}
                    )
                    time.sleep(1)
                    # å¼€å¤šä»“
                    exchange.create_market_order(
                        TRADE_CONFIG['symbol'],
                        'buy',
                        position_size,
                        params={'tag': '60bb4a8d3416BCDE'}
                    )
                else:
                    logger.warning("âš ï¸ æ£€æµ‹åˆ°ç©ºå¤´æŒä»“ä½†æ•°é‡ä¸º0ï¼Œç›´æ¥å¼€å¤šä»“")
                    exchange.create_market_order(
                        TRADE_CONFIG['symbol'],
                        'buy',
                        position_size,
                        params={'tag': '60bb4a8d3416BCDE'}
                    )

            elif current_position and current_position['side'] == 'long':
                # åŒæ–¹å‘ï¼Œæ£€æŸ¥æ˜¯å¦éœ€è¦è°ƒæ•´ä»“ä½
                size_diff = position_size - current_position['size']

                if abs(size_diff) >= 0.01:  # æœ‰å¯è°ƒæ•´çš„å·®å¼‚
                    if size_diff > 0:
                        # åŠ ä»“
                        add_size = round(size_diff, 2)
                        logger.info(
                            f"å¤šä»“åŠ ä»“ {add_size:.2f} å¼  (å½“å‰:{current_position['size']:.2f} â†’ ç›®æ ‡:{position_size:.2f})")
                        exchange.create_market_order(
                            TRADE_CONFIG['symbol'],
                            'buy',
                            add_size,
                            params={'tag': '60bb4a8d3416BCDE'}
                        )
                    else:
                        # å‡ä»“
                        reduce_size = round(abs(size_diff), 2)
                        logger.info(
                            f"å¤šä»“å‡ä»“ {reduce_size:.2f} å¼  (å½“å‰:{current_position['size']:.2f} â†’ ç›®æ ‡:{position_size:.2f})")
                        exchange.create_market_order(
                            TRADE_CONFIG['symbol'],
                            'sell',
                            reduce_size,
                            params={'reduceOnly': True, 'tag': '60bb4a8d3416BCDE'}
                        )
                else:
                    logger.info(
                        f"å·²æœ‰å¤šå¤´æŒä»“ï¼Œä»“ä½åˆé€‚ä¿æŒç°çŠ¶ (å½“å‰:{current_position['size']:.2f}, ç›®æ ‡:{position_size:.2f})")
            else:
                # æ— æŒä»“æ—¶å¼€å¤šä»“
                logger.info(f"å¼€å¤šä»“ {position_size:.2f} å¼ ...")
                exchange.create_market_order(
                    TRADE_CONFIG['symbol'],
                    'buy',
                    position_size,
                    params={'tag': '60bb4a8d3416BCDE'}
                )

        elif signal_data['signal'] == 'SELL':
            if current_position and current_position['side'] == 'long':
                # å…ˆæ£€æŸ¥å¤šå¤´æŒä»“æ˜¯å¦çœŸå®å­˜åœ¨ä¸”æ•°é‡æ­£ç¡®
                if current_position['size'] > 0:
                    logger.info(f"å¹³å¤šä»“ {current_position['size']:.2f} å¼ å¹¶å¼€ç©ºä»“ {position_size:.2f} å¼ ...")
                    # å¹³å¤šä»“
                    exchange.create_market_order(
                        TRADE_CONFIG['symbol'],
                        'sell',
                        current_position['size'],
                        params={'reduceOnly': True, 'tag': '60bb4a8d3416BCDE'}
                    )
                    time.sleep(1)
                    # å¼€ç©ºä»“
                    exchange.create_market_order(
                        TRADE_CONFIG['symbol'],
                        'sell',
                        position_size,
                        params={'tag': '60bb4a8d3416BCDE'}
                    )
                else:
                    logger.warning("âš ï¸ æ£€æµ‹åˆ°å¤šå¤´æŒä»“ä½†æ•°é‡ä¸º0ï¼Œç›´æ¥å¼€ç©ºä»“")
                    exchange.create_market_order(
                        TRADE_CONFIG['symbol'],
                        'sell',
                        position_size,
                        params={'tag': '60bb4a8d3416BCDE'}
                    )

            elif current_position and current_position['side'] == 'short':
                # åŒæ–¹å‘ï¼Œæ£€æŸ¥æ˜¯å¦éœ€è¦è°ƒæ•´ä»“ä½
                size_diff = position_size - current_position['size']

                if abs(size_diff) >= 0.01:  # æœ‰å¯è°ƒæ•´çš„å·®å¼‚
                    if size_diff > 0:
                        # åŠ ä»“
                        add_size = round(size_diff, 2)
                        logger.info(
                            f"ç©ºä»“åŠ ä»“ {add_size:.2f} å¼  (å½“å‰:{current_position['size']:.2f} â†’ ç›®æ ‡:{position_size:.2f})")
                        exchange.create_market_order(
                            TRADE_CONFIG['symbol'],
                            'sell',
                            add_size,
                            params={'tag': '60bb4a8d3416BCDE'}
                        )
                    else:
                        # å‡ä»“
                        reduce_size = round(abs(size_diff), 2)
                        logger.info(
                            f"ç©ºä»“å‡ä»“ {reduce_size:.2f} å¼  (å½“å‰:{current_position['size']:.2f} â†’ ç›®æ ‡:{position_size:.2f})")
                        exchange.create_market_order(
                            TRADE_CONFIG['symbol'],
                            'buy',
                            reduce_size,
                            params={'reduceOnly': True, 'tag': '60bb4a8d3416BCDE'}
                        )
                else:
                    logger.info(
                        f"å·²æœ‰ç©ºå¤´æŒä»“ï¼Œä»“ä½åˆé€‚ä¿æŒç°çŠ¶ (å½“å‰:{current_position['size']:.2f}, ç›®æ ‡:{position_size:.2f})")
            else:
                # æ— æŒä»“æ—¶å¼€ç©ºä»“
                logger.info(f"å¼€ç©ºä»“ {position_size:.2f} å¼ ...")
                exchange.create_market_order(
                    TRADE_CONFIG['symbol'],
                    'sell',
                    position_size,
                    params={'tag': '60bb4a8d3416BCDE'}
                )

        elif signal_data['signal'] == 'HOLD':
            logger.info("å»ºè®®è§‚æœ›ï¼Œä¸æ‰§è¡Œäº¤æ˜“")
            return

        logger.info("æ™ºèƒ½äº¤æ˜“æ‰§è¡ŒæˆåŠŸ")
        time.sleep(2)
        position = get_current_position()
        logger.info(f"æ›´æ–°åæŒä»“: {position}")

    except Exception as e:
        logger.error(f"äº¤æ˜“æ‰§è¡Œå¤±è´¥: {e}")

        # å¦‚æœæ˜¯æŒä»“ä¸å­˜åœ¨çš„é”™è¯¯ï¼Œå°è¯•ç›´æ¥å¼€æ–°ä»“
        if "don't have any positions" in str(e):
            logger.info("å°è¯•ç›´æ¥å¼€æ–°ä»“...")
            try:
                if signal_data['signal'] == 'BUY':
                    exchange.create_market_order(
                        TRADE_CONFIG['symbol'],
                        'buy',
                        position_size,
                        params={'tag': '60bb4a8d3416BCDE'}
                    )
                elif signal_data['signal'] == 'SELL':
                    exchange.create_market_order(
                        TRADE_CONFIG['symbol'],
                        'sell',
                        position_size,
                        params={'tag': '60bb4a8d3416BCDE'}
                    )
                logger.info("ç›´æ¥å¼€ä»“æˆåŠŸ")
            except Exception as e2:
                logger.error(f"ç›´æ¥å¼€ä»“ä¹Ÿå¤±è´¥: {e2}")

        import traceback
        logger.error(traceback.format_exc())


def analyze_with_deepseek_with_retry(price_data, max_retries=2):
    """å¸¦é‡è¯•çš„DeepSeekåˆ†æ"""
    for attempt in range(max_retries):
        try:
            signal_data = analyze_with_deepseek(price_data)
            if signal_data and not signal_data.get('is_fallback', False):
                return signal_data

            logger.info(f"ç¬¬{attempt + 1}æ¬¡å°è¯•å¤±è´¥ï¼Œè¿›è¡Œé‡è¯•...")
            time.sleep(1)

        except Exception as e:
            logger.error(f"ç¬¬{attempt + 1}æ¬¡å°è¯•å¼‚å¸¸: {e}")
            if attempt == max_retries - 1:
                return create_fallback_signal(price_data)
            time.sleep(1)

    return create_fallback_signal(price_data)


def wait_for_next_period():
    """ç­‰å¾…åˆ°ä¸‹ä¸€ä¸ª15åˆ†é’Ÿæ•´ç‚¹"""
    now = datetime.now()
    current_minute = now.minute
    current_second = now.second

    # è®¡ç®—ä¸‹ä¸€ä¸ªæ•´ç‚¹æ—¶é—´ï¼ˆ00, 15, 30, 45åˆ†é’Ÿï¼‰
    next_period_minute = ((current_minute // 15) + 1) * 15
    if next_period_minute == 60:
        next_period_minute = 0

    # è®¡ç®—éœ€è¦ç­‰å¾…çš„æ€»ç§’æ•°
    if next_period_minute > current_minute:
        minutes_to_wait = next_period_minute - current_minute
    else:
        minutes_to_wait = 60 - current_minute + next_period_minute

    seconds_to_wait = minutes_to_wait * 60 - current_second

    # æ˜¾ç¤ºå‹å¥½çš„ç­‰å¾…æ—¶é—´
    display_minutes = minutes_to_wait - 1 if current_second > 0 else minutes_to_wait
    display_seconds = 60 - current_second if current_second > 0 else 0

    if display_minutes > 0:
        logger.info(f"ğŸ•’ ç­‰å¾… {display_minutes} åˆ† {display_seconds} ç§’åˆ°æ•´ç‚¹...")
    else:
        logger.info(f"ğŸ•’ ç­‰å¾… {display_seconds} ç§’åˆ°æ•´ç‚¹...")

    return seconds_to_wait


def trading_bot():
    # ç­‰å¾…åˆ°æ•´ç‚¹å†æ‰§è¡Œ
    wait_seconds = wait_for_next_period()
    if wait_seconds > 0:
        time.sleep(wait_seconds)

    """ä¸»äº¤æ˜“æœºå™¨äººå‡½æ•°"""
    logger.info("\n" + "=" * 60)
    logger.info(f"æ‰§è¡Œæ—¶é—´: {datetime.now().strftime('%Y-%m-%d %H:%M:%S')}")
    logger.info("=" * 60)

    # 1. è·å–å¢å¼ºç‰ˆKçº¿æ•°æ®
    price_data = get_btc_ohlcv_enhanced()
    if not price_data:
        return

    logger.info(f"BTCå½“å‰ä»·æ ¼: ${price_data['price']:,.2f}")
    logger.info(f"æ•°æ®å‘¨æœŸ: {TRADE_CONFIG['timeframe']}")
    logger.info(f"ä»·æ ¼å˜åŒ–: {price_data['price_change']:+.2f}%")

    # 2. ä½¿ç”¨DeepSeekåˆ†æï¼ˆå¸¦é‡è¯•ï¼‰
    signal_data = analyze_with_deepseek_with_retry(price_data)

    if signal_data.get('is_fallback', False):
        logger.warning("âš ï¸ ä½¿ç”¨å¤‡ç”¨äº¤æ˜“ä¿¡å·")

    # 3. æ‰§è¡Œæ™ºèƒ½äº¤æ˜“
    execute_intelligent_trade(signal_data, price_data)


def main():
    """ä¸»å‡½æ•°"""
    logger.info("BTC/USDT OKXè‡ªåŠ¨äº¤æ˜“æœºå™¨äººå¯åŠ¨æˆåŠŸï¼")
    logger.info("èåˆæŠ€æœ¯æŒ‡æ ‡ç­–ç•¥ + OKXå®ç›˜æ¥å£")

    if TRADE_CONFIG['test_mode']:
        logger.info("å½“å‰ä¸ºæ¨¡æ‹Ÿæ¨¡å¼ï¼Œä¸ä¼šçœŸå®ä¸‹å•")
    else:
        logger.info("å®ç›˜äº¤æ˜“æ¨¡å¼ï¼Œè¯·è°¨æ…æ“ä½œï¼")

    logger.info(f"äº¤æ˜“å‘¨æœŸ: {TRADE_CONFIG['timeframe']}")
    logger.info("å·²å¯ç”¨å®Œæ•´æŠ€æœ¯æŒ‡æ ‡åˆ†æå’ŒæŒä»“è·Ÿè¸ªåŠŸèƒ½")

    # è®¾ç½®äº¤æ˜“æ‰€
    if not setup_exchange():
        logger.error("äº¤æ˜“æ‰€åˆå§‹åŒ–å¤±è´¥ï¼Œç¨‹åºé€€å‡º")
        return

    logger.info("æ‰§è¡Œé¢‘ç‡: æ¯15åˆ†é’Ÿæ•´ç‚¹æ‰§è¡Œ")

    # å¾ªç¯æ‰§è¡Œï¼ˆä¸ä½¿ç”¨scheduleï¼‰
    while True:
        trading_bot()  # å‡½æ•°å†…éƒ¨ä¼šè‡ªå·±ç­‰å¾…æ•´ç‚¹

        # æ‰§è¡Œå®Œåç­‰å¾…ä¸€æ®µæ—¶é—´å†æ£€æŸ¥ï¼ˆé¿å…é¢‘ç¹å¾ªç¯ï¼‰
        time.sleep(60)  # æ¯åˆ†é’Ÿæ£€æŸ¥ä¸€æ¬¡


if __name__ == "__main__":
    main()
